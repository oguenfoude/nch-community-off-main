# =============================================================================
# NCH COMMUNITY - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!
# =============================================================================

# =============================================================================
# DATABASE (MongoDB)
# =============================================================================
# Your MongoDB connection string (MongoDB Atlas or local)
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/nch-community?retryWrites=true&w=majority"

# =============================================================================
# NEXTAUTH AUTHENTICATION
# =============================================================================
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-here-generate-with-openssl"

# Your app URL (no trailing slash)
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# GOOGLE DRIVE (Document Storage)
# =============================================================================
# Google Cloud Service Account email
GOOGLE_SERVICE_ACCOUNT_EMAIL="your-service-account@your-project.iam.gserviceaccount.com"

# Google Cloud Service Account private key (keep the \n for line breaks)
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Google Drive folder ID where client documents will be stored (optional - auto-creates if not set)
GOOGLE_DRIVE_FOLDER_ID=""

# =============================================================================
# CLOUDINARY (Optional - Image Storage)
# =============================================================================
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# =============================================================================
# SOFIZPAY PAYMENT GATEWAY (Algerian Payment - CIB/Edahabia)
# =============================================================================
# Public keys (exposed to browser)
NEXT_PUBLIC_SOFIZPAY_MERCHANT_ID="your-merchant-id"
NEXT_PUBLIC_SOFIZPAY_API_KEY="your-api-key"

# Private/Webhook secret (server-side only)
SOFIZPAY_WEBHOOK_SECRET="your-webhook-secret"

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV="development"
